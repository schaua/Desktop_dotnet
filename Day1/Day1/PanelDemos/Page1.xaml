<Page x:Class="Day1.PanelDemos.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Day1.PanelDemos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <DockPanel Background="LightGreen">
        <Label DockPanel.Dock="Top"  Background="White"  FontSize="24">1</Label>
        <StackPanel>
            <TextBlock Margin="3" TextWrapping="Wrap">This is page 1. Click <Hyperlink NavigateUri="Page2.xaml">here</Hyperlink> to go to page 2.</TextBlock>
            <Button>OK</Button>
            <Button>Cancel</Button>
        </StackPanel>
    </DockPanel>
</Page>
