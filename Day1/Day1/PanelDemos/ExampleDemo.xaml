<UserControl x:Class="Day1.PanelDemos.ExampleDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Day1.PanelDemos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Name="dock1"  Background="White">
        <Border Name="brd" DockPanel.Dock="Left" Background="#FFF073A6">
            <TextBlock>
                Lorem ipsum
            </TextBlock>
        </Border>
        <StackPanel Name="stk1"  DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" >
            <Button Margin="10">Cancel</Button>
            <Button Margin="10">OK</Button>
        </StackPanel>
        <Button>Button</Button>
    </DockPanel>
</UserControl>
